<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label "名前:", class: "col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_area :name, class: "form-control", rows: 1 %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label "年齢:", class: "col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_area :age, class: "form-control", rows: 1 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "内容:", class: "col-sm-1 control-label" %>
    <div class="col-sm-11"> 
      <%= f.text_area :body, class: "form-control", rows: 3 %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>